<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
  <persistence-unit name="ufrrjPU">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>ufrrj.model.AcaoExtensao</class>
    <class>ufrrj.model.Responsavel</class>
    <class>ufrrj.model.Inscricao</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:/data/extensao.db"/>
      <property name="hibernate.dialect" value="org.sqlite.hibernate.dialect.SQLiteDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
